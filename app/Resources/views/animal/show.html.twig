{% extends 'base.html.twig' %}

{% block body %}
    <h1>Animal</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ animal.name }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ animal.height }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ animal.weight }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ animal.location }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ animal.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('animal_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('animal_edit', { 'id': animal.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
